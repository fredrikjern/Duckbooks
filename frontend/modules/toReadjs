async function addToRead(userId, bookId) {
  try {
    // get the user data
    const userResponse = await axios.get(
      `${API_BASE}/users/${userId}?populate=*`,
      {
        headers: {
          Authorization: `Bearer ${sessionStorage.getItem("token")}`,
        },
      }
    );
    const userData = userResponse.data;

    // get the book data
    const bookResponse = await axios.get(`${API_BASE}/books/${bookId}`, {
      headers: {
        Authorization: `Bearer ${sessionStorage.getItem("token")}`,
      },
    });
    const bookData = bookResponse.data;
    console.log(bookData.data.id);
    let { Title, Author, Pages, releaseDate } = bookData.data.attributes;
    let bokArr = [
      {
        id: bookData.data.id,
        Title: Title,
        Author: Author,
        Pages: Pages,
        releaseDate: releaseDate,
      },
    ];

    userData.to_reads.push(bokArr[0]);
    console.log(userData.to_reads);

    // Update the user with the updated relation data
    const updatedUserResponse = await axios.put(
      `${API_BASE}/users/${userId}`,
      userData,
      {
        headers: {
          "Content-Type": "application/json",
          Authorization: `Bearer ${sessionStorage.getItem("token")}`,
        },
      }
    );

    console.log("Relation added successfully:", updatedUserResponse.data);
  } catch (error) {
    console.error("Failed to add relation:", error);
  }
}
